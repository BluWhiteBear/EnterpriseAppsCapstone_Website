    ViewData["Title"] = "Stats";
}
@model Breadcrumbs.Models.Stats

<h1>Stats</h1>

<h2>Overview</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserCount)
            </th>
