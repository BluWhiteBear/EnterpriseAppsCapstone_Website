                @Html.DisplayNameFor(model => model.LocationCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationCount)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.UserCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.LocationCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.DestinationCount)
            </td>
        </tr>
